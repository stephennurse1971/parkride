{% extends 'base.html.twig' %}

{% block title %}Edit Instructions{% endblock %}

{% block body %}
    <h1 style="color: red">Edit: Instructions</h1>

    {{ include('instructions/_form.html.twig', {'button_label': 'Update'}) }}

    <a class="btn btn-outline-primary btn-sm" href="{{ path('instructions_index') }}">Return to list</a>

    {{ include('instructions/_delete_form.html.twig') }}
{% endblock %}

{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#instructions_summary'))
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}